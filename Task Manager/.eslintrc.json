{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"env": {
		"browser": true,
		"node": true
	},
	"rules": {
		"no-console": "warn",
		"no-undef": "off",
		"no-unused-expressions": "error",
		"semi": [
			"error",
			"always"
		],
		"@typescript-eslint/no-explicit-any": "error",
		"indent": [
			"warn",
			2
		],
		"quotes": [
			"error",
			"double"
		]
	}
}